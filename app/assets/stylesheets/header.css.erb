nav.subnav form{ display:inline-block; float:right; margin:10px 0 0;}
nav.subnav input, nav.subnav select{ border:1px solid #cccccc; line-height:32px; height:32px;}
nav.subnav  nav > li > a{ padding:8px;}
.subnav .glyphicon{ font-size:18px;}
.subnav a span{ color:#337ab7;}
.subnav .s_search{ float:right; margin:4px 0 0 10px;}
.subnav a span:hover{ color:25669e;}


