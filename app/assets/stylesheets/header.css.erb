#H_moduleArea  .navbar-header{ border:none;}
.navbar-inverse .navbar-collapse, .navbar-inverse .navbar-form{ border-color:none;}
.navbar-inverse .navbar-toggle:focus, .navbar-inverse .navbar-toggle:hover{ background:none;}
