// Import colors-ui
@import "custom/colors";

// Declare new variables
$font-navbar: 'Gotham-Medium', verdana;
$bg-navbar: #25669e;
$bg-header: #0971b7;
$bg-btn-new-contact: #1f9dd9;
$bg-btn-new-contact-hover: #1d8ec4;
$bg-link-responsive: #1c517f;
$bg-link-responsive-hover: #1b4d78;

#header {
	.container {
		width: 100%;
	}
	.navbar {
		background-color: $bg-header;
	}
	.breadcrumb {
		margin-bottom: 30px;
		padding: 0;
	}
}

@media (min-width: 1200px) {
	#header {
		.container {
			max-width: 1200px;
			width: 100%;
		}
	}
}
@media (max-width: 884px) {
  #sField {
    font-size: 16px;
  }
}

.navbar-brand {
	@media (max-width: 767px) {
		margin: 10px;
	}
	background: url('<%= asset_path("logo-padma-w.png")%>') no-repeat scroll center left;
	height: 47px;
	margin: 0 10px 0 0;
	padding: 0;
	width: 53px;
}

.navbar-inverse {
	.navbar-nav {
		> li {
			@media (max-width: 767px) {
				&.open {
					.dropdown-menu {
						> li {
							> a {
								color: #fff;
							}
						}
					}
				}
			}
			@media (min-width: 768px) {
				&:hover {
					.dropdown-menu {
						display: block;
					}
				}
			}
			&.open,
			&.current {
				> a,
				> a:focus,
				> a:hover {
					background-color: $bg-navbar;
				}
			}
			> a {
				color: #fff;
				font: {
					family: $font-navbar;
					size: 11px;
					weight: normal;
				}
				text-transform: uppercase;
				&:hover {
					background-color: $bg-navbar;
				}
				@media (max-width: 767px) {
					border-top: 1px solid $bg-navbar;
					padding: 10px 0;
				}
				&#username {
					background-position: left center!important;
					padding-left: 30px;
					text-transform: none;
					@media (max-width: 520px) {
						background-position: 33% 42% !important;
					}
					@media (max-width: 767px) {
						background-position: 42% 42% !important;
					}
				}
				&.new-contact {
					background-color: $bg-btn-new-contact;
					@media (min-width: 992px) {
						margin-right: 10px;
					}
					text-shadow: 0 -1px 0 rgba(#000,.1);
					&:hover {
						background-color: $bg-btn-new-contact-hover;
					}
				}
			}
		}
		.dropdown-menu {
			border: none;
			font: {
				family: $font-navbar;
			}
  			max-height: 400px;
  			@media (max-width: 767px) {
  				max-height: none;
  				padding: 0;
  			}
  			@media (min-width: 768px) {
				border-bottom: 1px solid #ccc;
			}
			@media (min-width: 1200px) and (max-height: 1080px) {
				max-height: 500px;
			}
			overflow-x: hidden;
  			overflow-y: auto;
			> li {
				> a {
					color: #333;
					font: {
						family: $font-navbar;
						size: 11px;
					}
					max-width: 250px;
					@media (max-width: 767px) {
						background-color: $bg-link-responsive;
						color: #fff;
						max-width: none;
					}
					@media (min-width: 1200px) {
						max-width: 300px;
					}
					overflow: hidden;
					padding-bottom: 5px;
					padding-top: 5px;
					text-overflow: ellipsis;
					white-space: nowrap;
					@media (min-width: 768px) {
						&:hover {
							background-color: #f5f5f5;
							color: #333;
						}
					}
				}
			}
		}
	}
}

.navbar-inverse {
	.navbar-nav {
		.dropdown-menu {
			li {
				a {
					color: #333;
					display: block;
					font: {
						family: $font-navbar;
						size: 11px;
						weight: normal;
					}
					line-height: 1.42857143;
					padding: 3px 20px;
					@media (max-width: 767px) {
						background-color: $bg-link-responsive;
						color: #fff;
						max-width: none;
						padding-bottom: 10px;
						padding-top: 10px;
						&:hover,
						&:focus {
							background-color: $bg-link-responsive-hover;
							text-decoration: none;
						}
					}
					@media (min-width: 768px) {
						max-width: 250px;
						overflow: hidden;
						text-overflow: ellipsis;
						white-space: nowrap;
						&:hover {
							background-color: #f5f5f5;
							color: #333;
							text-decoration: none;
						}
					}
				}
			}
		}
	}
}

@media (min-width: 768px) {
	#refresh-lists-list-menu {
		line-height: 1.42857143;
		margin-right: -20px;
		padding: 1px;
		text-align: center;
		width: 20px;
	}
}

.navbar-inverse {
	.navbar-nav {
		@media (max-width: 767px) {
			margin: 0;
		}
		> li {
			a {
				@media (max-width: 767px) {
					text-align: center;
				}
			}
			a#username {
				&:hover {
					background-color: $bg-navbar !important;
				}
				@media (max-width: 767px) {
					border: none;
				}
			}
		}
		> .open {
			@media (max-width: 767px) {
				.dropdown-menu {
					> li {
						> a {
							&:focus,
							&:hover {
								background-color: $bg-link-responsive-hover;
							}
						}
					}
				}
			}
			a#username {
				background-color: $bg-navbar !important;
			}
		}
	}
}

// Breadcrumb
@media (min-width: 768px) {
	.breadcrumb-inner {
		-webkit-box-align: center;
		-webkit-align-items: center;
		-ms-flex-align: center;
		align-items: center;
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		height: 54px;
	}
	.breadcrumb-nav {
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		-ms-flex: 1;
		flex: 1;
		margin-left: -10px;
	}
	.breadcrumb-form {
		-webkit-box-flex: 0;
		-webkit-flex: none;
		-ms-flex: none;
		flex: none;
		margin-left: 10px;
	}
}

.breadcrumb-nav {
	font: {
		family: $font-navbar;
		size: 11px;
	}
	.nav-item {
		color: #2d74b2;
		display: inline-block;
		text-transform: uppercase;
		vertical-align: middle;
		@media (max-width: 767px) {
			padding-bottom: 15px;
			padding-top: 15px;
			-webkit-transition: padding .2s ease-in;
			transition: padding .2s ease-in;
		}
		+ .nav-item {
			a {
				background-color: #eaeaea;
				&:hover {
					background-color: #e0e0e0;
				}
			}
		}
		a {
			display: block;
			padding: 19.5px 10px;
			&:hover {
				text-decoration: none;
			}
		}
	}
}

.breadcrumb-form {
	.form-inline {
		margin-bottom: 0;
	}
	.search-btn {
		background: url('<%= asset_path("search.svg")%>') 0 0 no-repeat;
		border: none;
		display: inline-block;
		height: 25px;
		vertical-align: middle;
		width: 25px;
	}
}

@media (max-width: 767px) {
	.breadcrumb-form {
		> form {
			-webkit-box-align: center;
			-webkit-align-items: center;
			-ms-flex-align: center;
			align-items: center;
			display: -webkit-box;
			display: -webkit-flex;
			display: -ms-flexbox;
			display: flex;
			> .select,
			> .form-control {
				-webkit-box-flex: 1;
				-webkit-flex: 1;
				-ms-flex: 1;
				flex: 1;
			}
			input[type='submit'] {
				margin-left: 10px;
			}
		}
	}
	#refresh-lists-list-menu {
		cursor: pointer;
		padding: 0;
		.glyphicon {
			color: #fff;
		}
	}
}
